@model DesafioWebMotors.Application.ViewModels.AnuncioViewModel

@{
    ViewData["Title"] = "View";
}

<h2>Adicionar Anúncio</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Adicionar" asp-controller="Anuncio" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Marca" class="control-label"></label>
                <select id="Marca" class="form-control" asp-items="@(new SelectList(string.Empty, "ID", "Name"))"></select>
                <input type="hidden" asp-for="Marca" id="MarcaID"/>
                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Modelo" class="control-label"></label>
                <select id="Modelo" class="form-control" asp-items="@(new SelectList(string.Empty, "MakeID", "Name"))"></select>
                <input type="hidden" id="ModeloID" asp-for="Modelo" />
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Versao" class="control-label"></label>
                <select id="Versao" class="form-control" asp-items="@(new SelectList(string.Empty, "ModelID", "Name"))"></select>
                <input type="hidden" id="VersaoID" asp-for="Versao" />
                <span asp-validation-for="Versao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ano" class="control-label"></label>
                <input asp-for="Ano" class="form-control" />
                <span asp-validation-for="Ano" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quilometragem" class="control-label"></label>
                <input asp-for="Quilometragem" class="form-control" />
                <span asp-validation-for="Quilometragem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Observacao" class="control-label"></label>
                <input asp-for="Observacao" class="form-control" />
                <span asp-validation-for="Observacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
